/* pages/nearbyAddress/nearbyAddress.wxss */
.nearby-title{
  height: 80rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: space-between;
}
.tit-img{
  display: flex;
  height: 80rpx;
  align-items: center;
  width: 450rpx;
}
.tit-img image{
  width: 45rpx;
  height: 40rpx;
  margin-right: 7rpx;
}
.tit-img text{
  font-size: 28rpx;
  color: #999999;
}
.tit-chose{
  font-size: 28rpx;
  color: #1AAD19;
  line-height: 80rpx;
}
.nearby-tishi{
  font-size: 28rpx;
  color: #e70002;
  line-height: 80rpx;
  border-bottom: #f5f5f5 1rpx solid;
}
.list1{
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
}
.list1>image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 7rpx;
  margin-right: 15rpx;
  border: 1rpx solid #f5f5f5;
}
.list1-text{
  width: 420rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.text-h3{
  font-size: 32rpx;
  font-weight: 700;
}
.text-h4{
  font-size: 28rpx;
  color: #999;
}
.m{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.tuijian{
  width: 100rpx;
  height: 45rpx;
  background: #00C091;
  color: white;
  font-size: 28rpx;
  text-align: center;
  line-height: 45rpx;
  border-radius: 7rpx;
}
.m1{
  font-size: 26rpx;
  color: #e70002;
}
.null{
  width: 100%;
  text-align: center;
  padding: 80rpx 0;
  font-size: 30rpx;
  color: #999;
}